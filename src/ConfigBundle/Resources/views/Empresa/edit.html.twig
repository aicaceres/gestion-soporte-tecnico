{% extends "base.html.twig" %}
{% block page_content %}
    <div class='row'>
        <div class='col-md-12'>
            <div class='box box-solid {{box_color}}'>
                <div class='box-header'>
                    <h3 class='box-title'><i class="fa fa-building"></i> &nbsp; Datos de la Empresa  </h3>
                </div><!-- /.box-header -->
                {{ form_start(form) }}
                <div class='box-body'>
                    {% include "form-notification.html.twig" %}
                    <div class="row pad">
                        <div class="col-md-6">
                            <fieldset>
                                {{ form_row(form.nombre) }}
                                {{ form_row(form.direccion) }}
                                <div class="form-group">
                                    {{ form_label(form.email) }}
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                            {{ form_widget(form.email) }}
                                    </div>
                                    {{ form_errors(form.email) }}
                                </div>

                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                {{ form_row(form.cuit) }}
                                {{ form_row(form.telefono) }}
                              {{ form_row(form.leyenda) }}
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset>
                              {{ form_row(form.leyendaFactura) }}
                            </fieldset>
                        </div>
                    </div>
                    {% include "admin-form-data.html.twig" with {'table':entity} %}        
                </div>    
                <div class="box-footer">
                   
                    <div class="btn-group pull-right">
                        <button type="submit" class="btn btn-app"><i class="fa fa-save"></i> Guardar</button>
                        <a type="button" class="btn btn-app" href="{{ path('seguridad_empresa')}}"><i class="fa fa-reply"></i> Cancelar</a>
                    </div>
                </div>      
                {{ form_end(form) }}

              
            </div><!-- /.box -->
        </div><!-- /.col-->
    </div><!-- ./row -->
{% endblock %}