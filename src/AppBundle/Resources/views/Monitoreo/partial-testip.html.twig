<form id="testform" class="form-horizontal clear bg-{{respuesta.estado}}" style="padding: 5px 14px;">
    <fieldset>
       <h4> {% if respuesta.paquetesRecibidos>0 %}            
        Recibidos: {{ respuesta.paquetesRecibidos~'/'~intentos }} &nbsp;---&nbsp; Tiempo: {{ respuesta.tiempo }}
        {% else %}
        {{ respuesta.resultado }}
        {% endif %}
          <button title="Ver salida CMD" type="button" class="btn btn-xs btn-default pull-right" onclick="$('#salidacmd').toggle()" >
                <strong>  <i class="fa fa-terminal"></i></strong>   
            </button>  
       </h4>     
    </fieldset>            
</form>    
<div id="salidacmd" style="display:none;background-color:black;color:white;padding:0px 0px 10px 10px;font-size:12px;line-height:1.3;">
    {{ salidaPing|nl2br }}
</div>
<input type="hidden" id="tiempo" value="{{ respuesta.tiempo }}" />
<input type="hidden" id="estado" value="{{ respuesta.estado }}" />
<input type="hidden" id="title" value="{{ respuesta.text }}" />    
<input type="hidden" id="bg" value="{{ respuesta.bg }}" />    