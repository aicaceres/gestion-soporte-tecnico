<div class='col-md-12 no-padding'>
    <div class='box box-solid {{box_color}}'>
        <div class='box-header'>
            <h3 class='box-title'><i class="fa fa-exclamation-triangle"></i> &nbsp; Detalle Reclamo N° {{ entity.nroReferencia }} </h3>                
            <div class="pull-right box-tools">
                <a type="button" class="btn btn-box-tool cancelReclamo" href="#"><i class="fa fa-close"></i></a>                
            </div>    
        </div><!-- /.box-header -->        
        <div class='box-body'>            
            <div class="row">
                {% if entity.tipoProveedor %}
                <div class="col-md-12 pad"> &nbsp;&nbsp;&nbsp; <strong> {{ entity.iconoProveedor|raw }} &nbsp; {{ entity.nombreProveedor }} &nbsp; {{ entity.tipoConexionProveedor }}</strong>  </div>
                {% endif %}
                <div class="col-md-12">                    
                    <table class="table">
                        <tr>
                            <th style="width:15%">Fecha/Hora</th>
                            <th style="width:15%">N° Ref.</th>
                            <th>Referente</th>
                            <th>Descripción</th>
                            <th style="width:15%">Usuario</th>
                        </tr>
                        {% for res in resumen %}
                            <tr>
                                <td>{{ res.fecha|date('d-m-Y H:i') }}</td>
                                <td>{{ res.nroReferencia }}</td>
                                <td>{{ res.referente }}</td>
                                <td>{{ res.detalle|nl2br }}</td>
                                <td>{{ res.usuario }}</td>
                            </tr>                            
                        {% endfor %}
                    </table>
                </div>
            </div>                                
        </div><!-- /.box -->
    </div><!-- /.col-->        
</div>
