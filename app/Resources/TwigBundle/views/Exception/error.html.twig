{% extends 'base.html.twig' %}
{% block page_title %} Error {% endblock %}
{% block page_subtitle %} {{ status_code }} {% endblock %}

{% block page_content %}
    <div class="error-page">
        <h2 class="headline">
            {% if (status_code=='403') %}
                {% set icon,color = 'fa-expeditedssl','text-yellow'%}             
            {% elseif (status_code=='404') %}
                {% set icon,color = ' fa-map-signs','text-yellow'%}
            {% elseif (status_code=='500') %}   
                {% set icon,color = 'fa-cogs','text-red'%}
            {% else %}                
                 {% set icon,color = 'fa-times-circle-o','text-red'%}  
            {% endif %}
            <i class="fa {{icon}} {{color}} "></i>
        </h2>

        <div class="error-content">
            <h3><i class="fa fa-warning {{color}}"></i> Algo ha salido mal!</h3>

            <p>{{ exception.message }}</p>
        </div>
    </div>

{% endblock %}