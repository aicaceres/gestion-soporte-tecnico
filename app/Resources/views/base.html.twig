{% block javascripts %}    
{{ parent() }}
    <!-- Select2 -->
    <script src="{{ asset('bundles/avanzuadmintheme/vendor/adminlte/plugins/select2/select2.full.min.js') }}" type="text/javascript"></script>
    <!-- iCheck -->
