                </li>
                {% endif %}
                {% if app.user.access('reportes_insumo') %}
                <li id="reporteinsumo">
                    <a href="{{path('insumo_reportes')}}">
                        <i class="fa fa-circle-o"></i>
                        Reportes
                    </a>
                </li>
                {% endif %}
